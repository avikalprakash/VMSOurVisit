<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstStepRegister"
    android:background="@drawable/bg">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:background="@color/yellow"
            android:id="@+id/titleLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="Visitor Register"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:id="@+id/close"
                android:src="@drawable/left_arrow"/>

        </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/titleLayout">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative2"
        android:layout_marginTop="20sp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80sp"
            android:id="@+id/profile_pic"
            android:layout_height="80sp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user"
            android:background="@drawable/circle_view"
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_pic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:text="Attaced User Profile Image *"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative2"
        android:id="@+id/relative3"
        android:layout_marginTop="10sp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp">

        <ImageView
            android:layout_width="100sp"
            android:id="@+id/card_pic"
            android:layout_height="70sp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/card"
            android:background="@drawable/btn_bg_white"
            android:layout_marginTop="10sp"
            android:padding="6sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/card_pic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:text="Attaced ID proof Image"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/emailLayout"
        android:id="@+id/userLayout"
        android:background="@drawable/reactangle_btn">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/user"
            android:id="@+id/img2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img2"
            android:layout_centerVertical="true"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:hint="Name"
            android:inputType="text"
            android:textColor="#000000"
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/name"
            android:textColorHint="@color/gray"
            android:layout_marginRight="10sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/mobileLayout"
        android:id="@+id/emailLayout"
        android:background="@drawable/reactangle_btn">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/email"
            android:id="@+id/img3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img3"
            android:layout_centerVertical="true"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/email"
            android:textColorHint="@color/gray"
            android:layout_marginRight="10sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/relative3"
        android:id="@+id/mobileLayout"
        android:background="@drawable/reactangle_btn">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/mobile"
            android:id="@+id/img4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img4"
            android:layout_centerVertical="true"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:hint="Mobile"
            android:inputType="number"
            android:textColor="#000000"
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/mobile"
            android:textColorHint="@color/gray"
            android:layout_marginRight="10sp"
            />
    </RelativeLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:id="@+id/next"
            android:layout_below="@+id/userLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:text="Next"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_marginBottom="22sp"
            android:background="@drawable/btn_bg_yellow"/>

</RelativeLayout>

</ScrollView>

</RelativeLayout>