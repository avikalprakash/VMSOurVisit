<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstStepRegister"
    android:background="@drawable/bg">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:background="@color/yellow"
            android:id="@+id/titleLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="Visitor Register"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:id="@+id/close"
                android:src="@drawable/left_arrow"/>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleLayout"
            android:layout_marginTop="20dp"
            android:id="@+id/text2"
            android:visibility="gone"
            android:text="Required Information *"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/titleLayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/visitLayout"
            android:background="@drawable/reactangle_btn">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/visitor_purpose"
                android:id="@+id/img2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_toEndOf="@+id/img2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:hint="Enquiry"
                android:textColor="#000000"
                android:gravity="top|left"
                android:lines="4"
                android:minLines="4"
                android:inputType="textMultiLine"
                android:backgroundTint="@android:color/transparent"
                android:id="@+id/visitor_purpose"
                android:textColorHint="@color/gray"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/visitLayout"
            android:id="@+id/countryLayout"
            android:background="@drawable/reactangle_btn">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/location"
                android:id="@+id/img3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <Spinner
                android:id="@+id/countryEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:popupBackground="@color/yellow"
                android:theme="@style/Spinner"
                android:saveEnabled="false"
                android:layout_marginLeft="30sp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/drop"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/countryLayout"
            android:id="@+id/stateLayout"
            android:background="@drawable/reactangle_btn">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/location"
                android:id="@+id/img4"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <Spinner
                android:id="@+id/stateEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:popupBackground="@color/yellow"
                android:theme="@style/Spinner"
                android:saveEnabled="false"
                android:layout_marginLeft="30sp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/drop"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/stateLayout"
            android:id="@+id/cityLayout"
            android:background="@drawable/reactangle_btn">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/location"
                android:id="@+id/img5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/cityEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="@color/white"
                android:hint="City"
                android:textSize="18sp"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/cityLayout"
            android:id="@+id/addressLayout"
            android:background="@drawable/reactangle_btn">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/location"
                android:id="@+id/img6"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_toEndOf="@+id/img6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:hint="Address"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:textColor="#000000"
                android:backgroundTint="@android:color/transparent"
                android:id="@+id/address"
                android:textColorHint="@color/gray"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressLayout"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/genderText"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressLayout"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:id="@+id/linear"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Male"
                android:id="@+id/male"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:background="@drawable/reactangle_btn"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Female"
                android:id="@+id/female"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:background="@drawable/reactangle_btn"/>
        </LinearLayout>





        <Button
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:id="@+id/submit"
            android:layout_below="@+id/linear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:background="@drawable/btn_bg_yellow"/>


    </RelativeLayout>
</ScrollView>
</RelativeLayout>