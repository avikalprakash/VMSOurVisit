<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.Profile"
        android:gravity="center"
        android:paddingTop="30dp"
        android:background="@drawable/bg"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginTop="-30dp"
            />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:id="@+id/logo"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/avatar"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peter sagan"
            android:gravity="center"
            android:textColor="#ffffff"
            android:id="@+id/nme_txt"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organisation Id"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organisation Id"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:id="@+id/membertype_txt"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Id"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_txt"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="daniealphan123@gmail.com"
                />

            <ImageView
                android:layout_width="22dp"
                android:src="@drawable/email"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobile_txt"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="1234567890000"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/mobile"
                android:layout_height="20dp" />



        </LinearLayout>

        <Button android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/edtpro_btn"
            android:visibility="gone"
            android:background="@drawable/btn_bg_yellow"
            android:text="Edit Profile"
            android:textColor="#ffffff"/>



    </LinearLayout>
</ScrollView>